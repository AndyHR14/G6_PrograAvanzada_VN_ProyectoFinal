@model IEnumerable<ProyectoFinal.Models.Sinpe>
@using System.Globalization;

@{
    ViewData["Title"] = "Ver SINPE";
    var cr = new CultureInfo("es-CR");
}

<div class="container py-4">
    <div class="d-flex align-items-start justify-content-between flex-wrap gap-2 mb-3">
        <div>
            <h1 class="h3 mb-1">Transacciones SINPE</h1>
            <p class="text-muted mb-0">
                Caja: <strong>@ViewBag.Caja?.Nombre</strong>
                <span class="ms-2 badge bg-light text-dark border">
                    <i class="bi bi-phone me-1"></i>@ViewBag.Caja?.TelefonoSINPE
                </span>
            </p>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Volver a la lista
            </a>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table align-middle table-striped">
                    <thead class="table-light">
                        <tr>
                            <th>Teléfono Origen</th>
                            <th>Nombre Origen</th>
                            <th>Teléfono Destinatario</th>
                            <th>Nombre Destinatario</th>
                            <th class="text-end">Monto</th>
                            <th>Descripción</th>
                            <th class="text-nowrap">Fecha</th>
                            <th>Estado</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.TelefonoOrigen</td>
                                    <td class="fw-semibold">@item.NombreOrigen</td>
                                    <td>@item.TelefonoDestinatario</td>
                                    <td>@item.NombreDestinatario</td>
                                    <td class="text-end">@item.Monto.ToString("C", cr)</td>
                                    <td>@item.Descripcion</td>
                                    <td>@item.FechaDeRegistro.ToString("dd/MM/yyyy HH:mm:ss")</td>
                                    <td>
                                        @if (item.Estado)
                                        {
                                            <span class="badge bg-success-subtle text-success border border-success-subtle">Sincronizado</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning-subtle text-warning border border-warning-subtle">No sincronizado</span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        @if (!item.Estado)
                                        {
                                            <form asp-action="SincronizarSinpe" asp-controller="Cajas" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@item.IdSinpe" />
                                                <button type="submit" class="btn btn-sm btn-primary">Sincronizar</button>
                                            </form>
                                        }
                                        else
                                        {
                                            <button class="btn btn-sm btn-outline-secondary" disabled>Sincronizado</button>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="9" class="text-center py-4 text-muted">
                                    No hay transacciones SINPE para esta caja.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
