@model IEnumerable<ProyectoFinal.Models.Cajas>

@{
    ViewData["Title"] = "Cajas";
}

<div class="container py-4">

    <div class="d-flex align-items-start justify-content-between flex-wrap gap-2 mb-3">
        <div>
            <h1 class="h3 mb-1">Cajas</h1>
            <p class="text-muted mb-0">Gestión de cajas asociadas a SINPE Móvil.</p>
        </div>
        <div class="d-flex gap-2">
            <a class="btn btn-primary" asp-action="Registrar" role="button">
                <i class="bi bi-plus-circle me-1"></i> Registrar caja
            </a>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">

            <!-- Filtros -->
            <div class="row g-3 mb-3">
                <div class="col-12 col-md-6">
                    <label for="filtroTexto" class="form-label">Buscar</label>
                    <input type="text"
                           id="filtroTexto"
                           class="form-control"
                           placeholder="Nombre, descripción o teléfono SINPE">
                </div>

                <div class="col-8 col-md-4">
                    <label for="filtroEstado" class="form-label">Estado</label>
                    <select id="filtroEstado" class="form-select">
                        <option value="">Todos</option>
                        <option value="Activo">Activo</option>
                        <option value="Inactivo">Inactivo</option>
                    </select>
                </div>

                <div class="col-4 col-md-2 d-flex align-items-end">
                    <button type="button" id="btnLimpiarFiltros" class="btn btn-outline-secondary w-100">
                        Limpiar
                    </button>
                </div>
            </div>

            <!-- Tabla -->
            <div class="table-responsive">
                <table class="table align-middle table-hover" id="tablaCajas">
                    <thead class="table-light">
                        <tr>
                            <th scope="col" class="text-nowrap">ID</th>
                            <th scope="col">Nombre</th>
                            <th scope="col">Descripción</th>
                            <th scope="col" class="text-nowrap">Teléfono SINPE</th>
                            <th scope="col" class="text-nowrap">Fecha de registro</th>
                            <th scope="col">Estado</th>
                            <th scope="col" class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var itemCaja in Model)
                            {
                                <tr data-row="caja">
                                    <td class="text-muted">@itemCaja.IdCaja</td>
                                    <td class="fw-semibold">@itemCaja.Nombre</td>
                                    <td>
                                        @{
                                            var desc = itemCaja.Descripcion ?? "";
                                            var corta = desc.Length > 10 ? desc.Substring(0, 10) + "…" : desc;
                                        }
                                        <span title="@desc">@corta</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-light text-dark border">
                                            <i class="bi bi-phone me-1"></i>@itemCaja.TelefonoSINPE
                                        </span>
                                    </td>
                                    <td>@itemCaja.FechaDeRegistro.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        @if (itemCaja.Estado)
                                        {
                                            <span class="badge bg-success-subtle text-success border border-success-subtle">Activo</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary-subtle text-secondary border border-secondary-subtle">Inactivo</span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group" role="group">
                                            <a class="btn btn-sm btn-outline-primary"
                                               asp-controller="Cajas" asp-action="Editar" asp-route-id="@itemCaja.IdCaja">
                                                <i class="bi bi-pencil-square me-1"></i>Editar
                                            </a>
                                            <a class="btn btn-sm btn-outline-info"
                                               asp-controller="Cajas" asp-action="VerSinpe" asp-route-id="@itemCaja.TelefonoSINPE">
                                                <i class="bi bi-receipt me-1"></i>Ver SINPE
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr id="filaSinDatos">
                                <td colspan="7" class="text-center py-4 text-muted">
                                    No hay cajas registradas.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div id="mensajeSinResultados" class="text-center py-3 text-muted d-none">
                No hay resultados que coincidan con los filtros.
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {

            const inputTexto = document.getElementById('filtroTexto');
            const selectEstado = document.getElementById('filtroEstado');
            const btnLimpiar = document.getElementById('btnLimpiarFiltros');

            const tabla = document.getElementById('tablaCajas');
            const filas = tabla.querySelectorAll('tbody tr[data-row="caja"]');
            const mensajeSinResultados = document.getElementById('mensajeSinResultados');
            const filaSinDatos = document.getElementById('filaSinDatos');

            function normalizar(texto) {
                return (texto || "")
                    .toLowerCase()
                    .normalize("NFD")
                    .replace(/[\u0300-\u036f]/g, "");
            }

            function aplicarFiltros() {
                const texto = normalizar(inputTexto.value.trim());
                const estadoFiltro = selectEstado.value;

                let hayVisibles = false;

                filas.forEach(fila => {
                    const celdas = fila.children;

                    const nombre = normalizar(celdas[1].innerText);
                    const descripcion = normalizar(celdas[2].innerText);
                    const telefono = normalizar(celdas[3].innerText);
                    const estadoTexto = (celdas[5].innerText || "").trim();

                    const textoBuscable = nombre + " " + descripcion + " " + telefono;

                    let coincideTexto = texto ? textoBuscable.includes(texto) : true;
                    let coincideEstado = estadoFiltro ? estadoTexto === estadoFiltro : true;

                    if (coincideTexto && coincideEstado) {
                        fila.style.display = "";
                        hayVisibles = true;
                    } else {
                        fila.style.display = "none";
                    }
                });

                mensajeSinResultados.classList.toggle('d-none', hayVisibles || filas.length === 0);

                if (filaSinDatos && filas.length === 0) {
                    mensajeSinResultados.classList.add('d-none');
                }
            }

            function limpiarFiltros() {
                inputTexto.value = "";
                selectEstado.value = "";
                aplicarFiltros();
            }

            inputTexto.addEventListener('input', aplicarFiltros);
            selectEstado.addEventListener('change', aplicarFiltros);
            btnLimpiar.addEventListener('click', limpiarFiltros);

        });
    </script>
}
