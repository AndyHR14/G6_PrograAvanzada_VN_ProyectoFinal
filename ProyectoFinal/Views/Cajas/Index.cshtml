@model IEnumerable<ProyectoFinal.Models.Cajas>

@{
    ViewData["Title"] = "Cajas";
}

<div class="container py-4">

    <div class="d-flex align-items-start justify-content-between flex-wrap gap-2 mb-3">
        <div>
            <h1 class="h3 mb-1">Cajas</h1>
            <p class="text-muted mb-0">Gestión de cajas asociadas a SINPE Móvil.</p>
        </div>
        <div class="d-flex gap-2">
            <a class="btn btn-primary" asp-action="Registrar" role="button">
                <i class="bi bi-plus-circle me-1"></i> Registrar caja
            </a>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table align-middle table-hover">
                    <thead class="table-light">
                        <tr>
                            <th scope="col" class="text-nowrap">ID</th>
                            <th scope="col">Nombre</th>
                            <th scope="col">Descripción</th>
                            <th scope="col" class="text-nowrap">Teléfono SINPE</th>
                            <th scope="col" class="text-nowrap">Fecha de registro</th>
                            <th scope="col">Estado</th>
                            <th scope="col" class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var itemCaja in Model)
                            {
                                <tr>
                                    <td class="text-muted">@itemCaja.IdCaja</td>
                                    <td class="fw-semibold">@itemCaja.Nombre</td>
                                    <td>
                                        @{
                                            var desc = itemCaja.Descripcion ?? "";
                                            var corta = desc.Length > 10 ? desc.Substring(0, 10) + "…" : desc;
                                        }
                                        <span title="@desc">@corta</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-light text-dark border">
                                            <i class="bi bi-phone me-1"></i>@itemCaja.TelefonoSINPE
                                        </span>
                                    </td>
                                    <td>@itemCaja.FechaDeRegistro.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        @if (itemCaja.Estado)
                                        {
                                            <span class="badge bg-success-subtle text-success border border-success-subtle">Activo</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary-subtle text-secondary border border-secondary-subtle">Inactivo</span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group" role="group">
                                            <a class="btn btn-sm btn-outline-primary"
                                               asp-controller="Cajas" asp-action="Editar" asp-route-id="@itemCaja.IdCaja">
                                                <i class="bi bi-pencil-square me-1"></i>Editar
                                            </a>
                                            <a class="btn btn-sm btn-outline-info"
                                               asp-controller="Cajas" asp-action="VerSinpe" asp-route-id="@itemCaja.TelefonoSINPE">
                                                <i class="bi bi-receipt me-1"></i>Ver SINPE
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center py-4 text-muted">
                                    No hay cajas registradas.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
