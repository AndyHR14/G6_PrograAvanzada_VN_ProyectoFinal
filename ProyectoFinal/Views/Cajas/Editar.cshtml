@model ProyectoFinal.Models.Cajas

<h2>Editar caja</h2>

<form asp-action="Editar" method="post">
    <input type="hidden" asp-for="IdCaja" />

    <div class="mb-3">
        <label for="" class="form-label">ID caja</label>
        <input type="text" readonly
               class="form-control"
               asp-for="IdCaja"
               aria-describedby="helpId"
               placeholder="Id" />
    </div>

    <div class="mb-3">
        <label asp-for="Descripcion" class="form-label">Descipcion</label>
        <input asp-for="Descripcion"
               class="form-control"
               aria-describedby="helpDexcripcion"
               placeholder="Ingrese una descripcion" />
        <small id="helpNombre" class="form-text text-muted"></small>
    </div>

    <div class="mb-3">
        <label asp-for="TelefonoSINPE" class="form-label">Teléfono del Sinpe</label>
        <input asp-for="TelefonoSINPE"
               class="form-control"
               aria-describedby="helpTelefonoSINPE"
               placeholder="Ingrese el teléfono" />
        <small id="helpTelefono" class="form-text text-muted"></small>
    </div>

     <div class="mb-3">
         <label asp-for="Estado" class="form-label">Estado</label>
         <select asp-for="Estado" class="form-select">
             <option value="True">Activo</option>
             <option value="False">Inactivo</option>
         </select>
     </div>
   
    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    <a asp-action="Index" class="btn btn-warning">Volver</a>

</form>