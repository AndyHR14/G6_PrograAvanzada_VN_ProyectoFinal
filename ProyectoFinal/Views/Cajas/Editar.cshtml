@model ProyectoFinal.Models.Configuracion

@{
    ViewData["Title"] = "Editar Configuración";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <div class="card">
        <div class="card-body">
            <form asp-action="Editar" method="post">

                @* Campo oculto para el ID *@
                <input type="hidden" name="IdConfiguracion" value="@Model.IdConfiguracion" />

                @* Mostrar nombre del comercio (solo lectura) *@
                <div class="mb-3">
                    <label class="form-label">Comercio</label>
                    <input type="text" class="form-control" value="@Model.Comercio.Nombre" disabled />
                    <small class="text-muted">El comercio no puede ser modificado</small>
                </div>

                @* Tipo de Configuración (editable) *@
                <div class="mb-3">
                    <label for="TipoConfiguracion" class="form-label">Tipo de Configuración</label>
                    <select name="TipoConfiguracion" class="form-select" required>
                        <option value="1" selected="@(Model.TipoConfiguracion == 1)">Plataforma</option>
                        <option value="2" selected="@(Model.TipoConfiguracion == 2)">Externa</option>
                        <option value="3" selected="@(Model.TipoConfiguracion == 3)">Ambas</option>
                    </select>
                </div>

                @* Comisión (editable) *@
                <div class="mb-3">
                    <label for="Comision" class="form-label">Comisión (%)</label>
                    <input name="Comision" type="number" class="form-control" value="@Model.Comision" min="0" required />
                </div>

                @* Estado (editable) *@
                <div class="mb-3 form-check">
                    <input name="Estado" type="checkbox" class="form-check-input" id="Estado" checked="@Model.Estado" />
                    <label class="form-check-label" for="Estado">
                        Activo
                    </label>
                </div>

                @* Fechas (solo lectura) *@
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Fecha de Registro</label>
                        <input type="text" class="form-control" value="@Model.FechaDeRegistro.ToString("dd/MM/yyyy HH:mm")" disabled />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Última Modificación</label>
                        <input type="text" class="form-control" value="@(Model.FechaDeModificacion?.ToString("dd/MM/yyyy HH:mm") ?? "Sin modificaciones")" disabled />
                    </div>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Guardar Cambios
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}