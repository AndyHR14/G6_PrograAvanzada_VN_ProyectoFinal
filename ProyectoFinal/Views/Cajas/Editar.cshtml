@model ProyectoFinal.Models.Cajas

@{
    ViewData["Title"] = "Editar Caja";
}

<div class="container py-4">
    <div class="d-flex align-items-start justify-content-between flex-wrap gap-2 mb-3">
        <div>
            <h1 class="h3 mb-1">Editar Caja</h1>
            <p class="text-muted mb-0">Actualiza la información de la caja.</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Volver
            </a>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-12 col-lg-9">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <form asp-action="Editar" method="post" novalidate>
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="IdCaja" />
                        <input type="hidden" asp-for="IdComercio" />
                        <input type="hidden" asp-for="FechaDeRegistro" />

                        <div class="row g-3">
                            <div class="col-12 col-md-4">
                                <label class="form-label">ID Caja</label>
                                <input asp-for="IdCaja" class="form-control" readonly />
                            </div>

                            <div class="col-12 col-md-4">
                                <label class="form-label">ID Comercio</label>
                                <input asp-for="IdComercio" class="form-control" readonly />
                            </div>

                            <div class="col-12 col-md-4">
                                <label class="form-label">Fecha de Registro</label>
                                <input type="text" class="form-control" value="@Model.FechaDeRegistro.ToString("dd/MM/yyyy HH:mm")" readonly />
                            </div>

                            <div class="col-12 col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Nombre" class="form-control" placeholder="Nombre" required />
                                    <label asp-for="Nombre">Nombre de la Caja</label>
                                </div>
                                <span asp-validation-for="Nombre" class="text-danger small"></span>
                            </div>

                            <div class="col-12 col-md-6">
                                <label asp-for="TelefonoSINPE" class="form-label">Teléfono SINPE</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-telephone"></i></span>
                                    <input asp-for="TelefonoSINPE" class="form-control" type="tel" inputmode="numeric" maxlength="10" placeholder="10 dígitos" required />
                                </div>
                                <span asp-validation-for="TelefonoSINPE" class="text-danger small"></span>
                            </div>

                            <div class="col-12">
                                <div class="form-floating">
                                    <textarea asp-for="Descripcion" class="form-control" placeholder="Descripción" style="height:100px" required></textarea>
                                    <label asp-for="Descripcion">Descripción</label>
                                </div>
                                <span asp-validation-for="Descripcion" class="text-danger small"></span>
                            </div>

                            <div class="col-12 col-md-4">
                                <label asp-for="Estado" class="form-label">Estado</label>
                                <select asp-for="Estado" class="form-select">
                                    <option value="true">Activo</option>
                                    <option value="false">Inactivo</option>
                                </select>
                                <span asp-validation-for="Estado" class="text-danger small"></span>
                            </div>

                            @if (Model.FechaDeModificacion.HasValue)
                            {
                                <div class="col-12 col-md-8">
                                    <label class="form-label">Última Modificación</label>
                                    <input type="text" class="form-control" value="@Model.FechaDeModificacion.Value.ToString("dd/MM/yyyy HH:mm")" readonly />
                                </div>
                            }
                        </div>

                        <div class="d-flex gap-2 justify-content-end mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save2 me-1"></i> Guardar cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="alert alert-light border mt-3 mb-0">
                <i class="bi bi-info-circle me-2"></i>
                Recuerda: El ID de comercio y fecha de registro no pueden ser modificados.
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}