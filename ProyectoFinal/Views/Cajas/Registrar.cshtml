@model ProyectoFinal.Models.Cajas

@{
    ViewData["Title"] = "Registrar caja";
}

<div class="container py-4">

    <div class="d-flex align-items-start justify-content-between flex-wrap gap-2 mb-3">
        <div>
            <h1 class="h3 mb-1">Formulario de registro de cajas</h1>
            <p class="text-muted mb-0">Crea una nueva caja asociada a un comercio y número SINPE.</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Volver
            </a>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-12 col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none" role="alert"></div>

                    <form asp-action="Registrar" method="post" novalidate>
                        @Html.AntiForgeryToken()

                        <div class="row g-3">
                            <div class="col-12 col-md-6">
                                <label asp-for="IdComercio" class="form-label">Comercio</label>
                                <input asp-for="IdComercio" type="number" class="form-control" placeholder="ID del comercio" />
                                <span asp-validation-for="IdComercio" class="text-danger small"></span>
                            </div>

                            <div class="col-12 col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Nombre" class="form-control" placeholder="Nombre" />
                                    <label asp-for="Nombre">Nombre</label>
                                </div>
                                <span asp-validation-for="Nombre" class="text-danger small"></span>
                            </div>

                            <div class="col-12">
                                <div class="form-floating">
                                    <input asp-for="Descripcion" class="form-control" placeholder="Descripción" />
                                    <label asp-for="Descripcion">Descripción</label>
                                </div>
                                <span asp-validation-for="Descripcion" class="text-danger small"></span>
                            </div>

                            <div class="col-12 col-md-6">
                                <label asp-for="TelefonoSINPE" class="form-label">Teléfono SINPE</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-phone"></i></span>
                                    <input asp-for="TelefonoSINPE" class="form-control" type="tel" inputmode="numeric" maxlength="8" placeholder="8 dígitos" />
                                </div>
                                <span asp-validation-for="TelefonoSINPE" class="text-danger small"></span>
                            </div>

                            <div class="col-12 col-md-6">
                                <label asp-for="Estado" class="form-label">Estado</label>
                                <select asp-for="Estado" class="form-select">
                                    <option value="True">Activo</option>
                                    <option value="False">Inactivo</option>
                                </select>
                                <span asp-validation-for="Estado" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="d-flex gap-2 justify-content-end mt-4">
                            <button type="reset" class="btn btn-outline-danger">
                                <i class="bi bi-arrow-counterclockwise me-1"></i> Reset
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save2 me-1"></i> Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="alert alert-info border-0 shadow-sm mt-3 mb-0">
                <i class="bi bi-info-circle me-2"></i>
                La descripción se mostrará truncada a 10 caracteres en el listado (hover para ver completa).
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Para si hay errores
        (function () {
            const summary = document.querySelector('[asp-validation-summary="ModelOnly"]');
            if (summary && summary.innerText.trim().length > 0) summary.classList.remove('d-none');
        })();
    </script>
}
