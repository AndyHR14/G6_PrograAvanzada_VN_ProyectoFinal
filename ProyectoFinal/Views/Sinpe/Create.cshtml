@model ProyectoFinal.Models.Sinpe

@{
    ViewData["Title"] = "Registrar SINPE";
}

<div class="container py-4">

    <div class="d-flex align-items-start justify-content-between flex-wrap gap-2 mb-3">
        <div>
            <h1 class="h3 mb-1">Registrar nuevo SINPE</h1>
            <p class="text-muted mb-0">Ingresa los datos del envío para simular la transferencia.</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Volver
            </a>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-12 col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <form asp-action="Create" novalidate>
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none" role="alert"></div>

                        <div class="row g-3">
                            <!-- Teléfono Origen -->
                            <div class="col-12 col-md-6">
                                <label asp-for="TelefonoOrigen" class="form-label">Teléfono Origen</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-telephone"></i>
                                    </span>
                                    <input asp-for="TelefonoOrigen"
                                           class="form-control"
                                           type="tel"
                                           inputmode="numeric"
                                           placeholder="8 dígitos"
                                           maxlength="8" />
                                </div>
                                <span asp-validation-for="TelefonoOrigen" class="text-danger small"></span>
                            </div>

                            <!-- Nombre Origen -->
                            <div class="col-12 col-md-6">
                                <div class="form-floating">
                                    <input asp-for="NombreOrigen" class="form-control" placeholder="Nombre Origen" />
                                    <label asp-for="NombreOrigen">Nombre Origen</label>
                                </div>
                                <span asp-validation-for="NombreOrigen" class="text-danger small"></span>
                            </div>

                            <!-- Teléfono Destinatario -->
                            <div class="col-12 col-md-6">
                                <label asp-for="TelefonoDestinatario" class="form-label">Teléfono Destinatario (Caja)</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-phone"></i>
                                    </span>
                                    <input asp-for="TelefonoDestinatario"
                                           class="form-control"
                                           type="tel"
                                           inputmode="numeric"
                                           placeholder="8 dígitos"
                                           maxlength="8" />
                                </div>
                                <span asp-validation-for="TelefonoDestinatario" class="text-danger small"></span>
                            </div>

                            <!-- Nombre Destinatario -->
                            <div class="col-12 col-md-6">
                                <div class="form-floating">
                                    <input asp-for="NombreDestinatario" class="form-control" placeholder="Nombre Destinatario" />
                                    <label asp-for="NombreDestinatario">Nombre Destinatario</label>
                                </div>
                                <span asp-validation-for="NombreDestinatario" class="text-danger small"></span>
                            </div>

                            <!-- Monto -->
                            <div class="col-12 col-md-6">
                                <label asp-for="Monto" class="form-label">Monto</label>
                                <div class="input-group">
                                    <span class="input-group-text">₡</span>
                                    <input asp-for="Monto"
                                           class="form-control"
                                           type="number"
                                           step="0.01"
                                           min="0"
                                           placeholder="0.00" />
                                </div>
                                <span asp-validation-for="Monto" class="text-danger small"></span>
                            </div>

                            <!-- Descripción -->
                            <div class="col-12">
                                <div class="form-floating">
                                    <textarea asp-for="Descripcion" class="form-control" placeholder="Descripción (opcional)" style="height: 100px"></textarea>
                                    <label asp-for="Descripcion">Descripción (opcional)</label>
                                </div>
                                <span asp-validation-for="Descripcion" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="d-flex gap-2 justify-content-end mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check2-circle me-1"></i> Registrar
                            </button>
                        </div>
                    </form>

                    <div class="mt-3">
                        <small class="text-muted">
                            Al registrar, el sistema validará formato de teléfonos (8 dígitos Costa Rica) y que el monto sea mayor que cero.
                        </small>
                    </div>
                </div>
            </div>

            <div class="alert alert-light border mt-3 mb-0">
                <div class="d-flex">
                    <div class="me-2"><i class="bi bi-shield-check"></i></div>
                    <div>
                        <strong>Buenas prácticas:</strong> utiliza <code>@Html.AntiForgeryToken()</code>, valida en servidor y cliente, y registra bitácora de transacciones para auditoría.
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Mostrar errores
        (function () {
            const summary = document.querySelector('[asp-validation-summary="ModelOnly"]');
            if (summary && summary.innerText.trim().length > 0) {
                summary.classList.remove('d-none');
            }
        })();
    </script>
}
