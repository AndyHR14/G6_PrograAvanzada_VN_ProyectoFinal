@model ProyectoFinal.Models.Sinpe

@{
    ViewData["Title"] = "Registrar SINPE";
}

<h1>Registrar nuevo SINPE</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="TelefonoOrigen" class="control-label">Teléfono Origen</label>
                <input asp-for="TelefonoOrigen" class="form-control" />
                <span asp-validation-for="TelefonoOrigen" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="NombreOrigen" class="control-label">Nombre Origen</label>
                <input asp-for="NombreOrigen" class="form-control" />
                <span asp-validation-for="NombreOrigen" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="TelefonoDestinatario" class="control-label">Teléfono Destinatario (Caja)</label>
                <input asp-for="TelefonoDestinatario" class="form-control" />
                <span asp-validation-for="TelefonoDestinatario" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="NombreDestinatario" class="control-label">Nombre Destinatario</label>
                <input asp-for="NombreDestinatario" class="form-control" />
                <span asp-validation-for="NombreDestinatario" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Monto" class="control-label">Monto</label>
                <input asp-for="Monto" class="form-control" />
                <span asp-validation-for="Monto" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label">Descripción (opcional)</label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            
            <div class="form-group mt-3">
                <input type="submit" value="Registrar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Volver</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}