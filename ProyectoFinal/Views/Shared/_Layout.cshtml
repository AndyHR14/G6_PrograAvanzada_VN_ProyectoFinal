<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProyectoFinal</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProyectoFinal.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/sidebar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>

<body class="sidebar-collapsed">
    <div class="d-flex min-vh-100">

        <!-- Sidebar -->
        <aside id="sidebar" class="sidebar bg-light border-end">
            <div class="d-flex align-items-center justify-content-between px-3 py-3">
                <a class="navbar-brand fw-semibold d-flex align-items-center gap-2 text-decoration-none"
                    asp-controller="Home" asp-action="Index">
                    <span class="label">ProyectoFinal | Grupo 6</span>
                </a>
                <button id="btnSidebarToggle" class="btn btn-sm btn-outline-secondary rounded-pill" type="button"
                    aria-label="Colapsar barra lateral">
                    <i class="bi bi-chevron-right"></i>
                </button>
            </div>

            <nav class="px-2">
                <small class="text-uppercase text-muted px-2 label">Menu Principal</small>
                <ul class="nav flex-column my-2">
                    <li class="nav-item">
                        <a class="nav-link d-flex align-items-center gap-2" asp-controller="Home" asp-action="Index">
                            <i class="bi bi-speedometer2"></i><span class="label">Dashboard</span>
                        </a>
                    </li>

                    <li class="nav-item mt-2">
                        <small class="text-uppercase text-muted px-2 label">App</small>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link d-flex align-items-center gap-2" asp-controller="Comercio"
                            asp-action="Index">
                            <i class="bi bi-building"></i><span class="label">Comercio</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link d-flex align-items-center gap-2" asp-controller="Cajas" asp-action="Index">
                            <i class="bi bi-box-seam"></i><span class="label">Cajas</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link d-flex align-items-center gap-2" asp-controller="Configuracion" asp-action="Index">
                            <i class="bi bi-gear"></i><span class="label">Config comercio</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link d-flex align-items-center gap-2" asp-controller="ReportesMensuales"
                           asp-action="Index">
                            <i class="bi bi-flag"></i><span class="label">Reportes</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link d-flex align-items-center gap-2" asp-controller="Sinpe" asp-action="Index">
                            <i class="bi bi-receipt"></i><span class="label">SINPE</span>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link d-flex align-items-center gap-2" asp-controller="Usuarios"
                            asp-action="Index">
                            <i class="bi bi-person"></i><span class="label">Usuarios</span>
                        </a>
                    </li>


                    <li class="nav-item mt-2">
                        <small class="text-uppercase text-muted px-2 label">Otros</small>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link d-flex align-items-center gap-2" asp-controller="Home" asp-action="Privacy">
                            <i class="bi bi-shield-check"></i><span class="label">Privacidad</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </aside>

        <div class="content flex-grow-1 d-flex flex-column">
            <div class="border-bottom px-3 py-2 bg-white d-flex justify-content-end align-items-center">
            </div>

            <main role="main" class="flex-grow-1 p-3 p-md-4">
                @RenderBody()
            </main>

            <footer class="border-top text-muted px-3 py-2">
                &copy; 2025 - ProyectoFinal -
                <a asp-controller="Home" asp-action="Privacy">Privacidad</a>
            </footer>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        (function () {
            const body = document.body;
            const btn = document.getElementById('btnSidebarToggle');
            const KEY = 'sb-state';
            const saved = localStorage.getItem(KEY);
            if (saved === 'collapsed') body.classList.replace('sidebar-expanded', 'sidebar-collapsed');

            btn?.addEventListener('click', () => {
                body.classList.toggle('sidebar-collapsed');
                body.classList.toggle('sidebar-expanded');
                localStorage.setItem(KEY, body.classList.contains('sidebar-collapsed') ? 'collapsed' : 'expanded');
                const i = btn.querySelector('i');
                if (i) i.className = body.classList.contains('sidebar-collapsed') ? 'bi bi-chevron-right' : 'bi bi-chevron-left';
            });
        })();
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>