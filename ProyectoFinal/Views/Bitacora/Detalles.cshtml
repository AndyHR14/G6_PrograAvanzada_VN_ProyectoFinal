@model ProyectoFinal.Models.BitacoraEvento

@{
    ViewData["Title"] = "Detalles del Evento";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2>
                <i class="fas fa-info-circle"></i> Detalles del Evento #@Model.IdEvento
            </h2>
            <hr />
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Información del Evento</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">ID Evento:</dt>
                        <dd class="col-sm-9">@Model.IdEvento</dd>

                        <dt class="col-sm-3">Tabla del Evento:</dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-primary">@Model.TablaDeEvento</span>
                        </dd>

                        <dt class="col-sm-3">Tipo de Evento:</dt>
                        <dd class="col-sm-9">
                            @if (Model.TipoDeEvento == "Registrar")
                            {
                                <span class="badge bg-success">
                                    <i class="fas fa-plus-circle"></i> @Model.TipoDeEvento
                                </span>
                            }
                            else if (Model.TipoDeEvento == "Editar")
                            {
                                <span class="badge bg-warning text-dark">
                                    <i class="fas fa-edit"></i> @Model.TipoDeEvento
                                </span>
                            }
                            else if (Model.TipoDeEvento == "Eliminar")
                            {
                                <span class="badge bg-danger">
                                    <i class="fas fa-trash"></i> @Model.TipoDeEvento
                                </span>
                            }
                            else if (Model.TipoDeEvento == "Error")
                            {
                                <span class="badge bg-danger">
                                    <i class="fas fa-exclamation-triangle"></i> @Model.TipoDeEvento
                                </span>
                            }
                        </dd>

                        <dt class="col-sm-3">Fecha del Evento:</dt>
                        <dd class="col-sm-9">@Model.FechaDeEvento.ToString("dddd, dd/MM/yyyy HH:mm:ss")</dd>

                        <dt class="col-sm-3">Descripción:</dt>
                        <dd class="col-sm-9">@Model.DescripcionDeEvento</dd>

                        @if (!string.IsNullOrEmpty(Model.StackTrace))
                        {
                            <dt class="col-sm-3">Stack Trace:</dt>
                            <dd class="col-sm-9">
                                <div class="alert alert-danger">
                                    <pre style="white-space: pre-wrap; word-wrap: break-word;">@Model.StackTrace</pre>
                                </div>
                            </dd>
                        }

                        @if (!string.IsNullOrEmpty(Model.DatosAnteriores))
                        {
                            <dt class="col-sm-3">Datos Anteriores:</dt>
                            <dd class="col-sm-9">
                                <div class="card">
                                    <div class="card-body bg-light">
                                        <pre style="white-space: pre-wrap; word-wrap: break-word; max-height: 300px; overflow-y: auto;">@Model.DatosAnteriores</pre>
                                    </div>
                                </div>
                            </dd>
                        }

                        @if (!string.IsNullOrEmpty(Model.DatosPosteriores))
                        {
                            <dt class="col-sm-3">Datos Posteriores:</dt>
                            <dd class="col-sm-9">
                                <div class="card">
                                    <div class="card-body bg-light">
                                        <pre style="white-space: pre-wrap; word-wrap: break-word; max-height: 300px; overflow-y: auto;">@Model.DatosPosteriores</pre>
                                    </div>
                                </div>
                            </dd>
                        }
                    </dl>

                    <div class="mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Volver a la lista
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>