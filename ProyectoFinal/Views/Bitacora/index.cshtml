@model IEnumerable<ProyectoFinal.Models.BitacoraEvento>

@{
    ViewData["Title"] = "Bitácora";
}

<div class="container py-4">

    <!-- Hero Bitácora -->
    <div class="card border-0 shadow-sm mb-4 bg-warning bg-gradient text-dark">
        <div class="card-body px-4 py-4">
            <div class="d-flex flex-column flex-md-row align-items-start align-items-md-center justify-content-between gap-3">
                <div>
                    <h1 class="h2 fw-semibold mb-1">
                        <i class="bi bi-clipboard-data me-2"></i> Bitácora
                    </h1>
                    <p class="mb-0 text-dark-emphasis">
                        Registro de eventos del sistema (acciones y errores).
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Content card -->
    <div class="card shadow-sm border-0">
        <div class="card-body">

            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table align-middle table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="text-nowrap">ID Evento</th>
                                <th>Tabla</th>
                                <th class="text-nowrap">Tipo de Evento</th>
                                <th class="text-nowrap">Fecha del Evento</th>
                                <th>Descripción</th>
                                <th>Stack Trace</th>
                                <th>Datos Anteriores</th>
                                <th>Datos Posteriores</th>
                                <th class="text-end">Acciones</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-muted">@item.IdEvento</td>

                                    <td>
                                        <span class="badge bg-light text-dark border">
                                            @item.TablaDeEvento
                                        </span>
                                    </td>

                                    <td>
                                        @if (item.TipoDeEvento == "Registrar")
                                        {
                                            <span class="badge bg-success-subtle text-success border border-success-subtle">
                                                <i class="bi bi-plus-circle me-1"></i>@item.TipoDeEvento
                                            </span>
                                        }
                                        else if (item.TipoDeEvento == "Editar")
                                        {
                                            <span class="badge bg-warning-subtle text-warning-emphasis border border-warning-subtle">
                                                <i class="bi bi-pencil-square me-1"></i>@item.TipoDeEvento
                                            </span>
                                        }
                                        else if (item.TipoDeEvento == "Eliminar")
                                        {
                                            <span class="badge bg-danger-subtle text-danger border border-danger-subtle">
                                                <i class="bi bi-trash me-1"></i>@item.TipoDeEvento
                                            </span>
                                        }
                                        else if (item.TipoDeEvento == "Error")
                                        {
                                            <span class="badge bg-danger-subtle text-danger border border-danger-subtle">
                                                <i class="bi bi-exclamation-triangle me-1"></i>@item.TipoDeEvento
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary-subtle text-secondary border border-secondary-subtle">
                                                @item.TipoDeEvento
                                            </span>
                                        }
                                    </td>

                                    <td class="text-nowrap">@item.FechaDeEvento.ToString("dd/MM/yyyy HH:mm:ss")</td>

                                    <td>
                                        @{
                                            var desc = item.DescripcionDeEvento ?? "";
                                            var corta = desc.Length > 50 ? desc.Substring(0, 50) + "…" : desc;
                                        }
                                        <span title="@desc">@corta</span>
                                    </td>

                                    <td>
                                        @if (!string.IsNullOrEmpty(item.StackTrace))
                                        {
                                            var st = item.StackTrace;
                                            var stCorta = st.Length > 30 ? st.Substring(0, 30) + "…" : st;
                                            <span class="text-danger" title="@st">@stCorta</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">N/A</span>
                                        }
                                    </td>

                                    <td>
                                        @if (!string.IsNullOrEmpty(item.DatosAnteriores))
                                        {
                                            var da = item.DatosAnteriores;
                                            var daCorta = da.Length > 30 ? da.Substring(0, 30) + "…" : da;
                                            <small class="text-muted" title="@da">@daCorta</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">N/A</span>
                                        }
                                    </td>

                                    <td>
                                        @if (!string.IsNullOrEmpty(item.DatosPosteriores))
                                        {
                                            var dp = item.DatosPosteriores;
                                            var dpCorta = dp.Length > 30 ? dp.Substring(0, 30) + "…" : dp;
                                            <small class="text-muted" title="@dp">@dpCorta</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">N/A</span>
                                        }
                                    </td>

                                    <td class="text-end">
                                        <a asp-action="Detalles"
                                           asp-route-id="@item.IdEvento"
                                           class="btn btn-sm btn-outline-info">
                                            <i class="bi bi-eye me-1"></i>Ver
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-4 text-muted">
                    No hay eventos registrados en la bitácora.
                </div>
            }

        </div>
    </div>
</div>

@section Scripts {
    <script>
        function copiarJSON(texto) {
            navigator.clipboard.writeText(texto);
            alert('JSON copiado al portapapeles');
        }
    </script>
}
