@model IEnumerable<ProyectoFinal.Models.BitacoraEvento>

@{
    ViewData["Title"] = "Bit치cora de Eventos";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2>
                <i class="fas fa-clipboard-list"></i> Bit치cora de Eventos del Sistema
            </h2>
            <hr />
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover table-bordered">
                                <thead class="table-dark">
                                    <tr>
                                        <th>ID Evento</th>
                                        <th>Tabla</th>
                                        <th>Tipo de Evento</th>
                                        <th>Fecha del Evento</th>
                                        <th>Descripci칩n</th>
                                        <th>Stack Trace</th>
                                        <th>Datos Anteriores</th>
                                        <th>Datos Posteriores</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.IdEvento</td>
                                            <td>
                                                <span class="badge bg-primary">@item.TablaDeEvento</span>
                                            </td>
                                            <td>
                                                @if (item.TipoDeEvento == "Registrar")
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="fas fa-plus-circle"></i> @item.TipoDeEvento
                                                    </span>
                                                }
                                                else if (item.TipoDeEvento == "Editar")
                                                {
                                                    <span class="badge bg-warning text-dark">
                                                        <i class="fas fa-edit"></i> @item.TipoDeEvento
                                                    </span>
                                                }
                                                else if (item.TipoDeEvento == "Eliminar")
                                                {
                                                    <span class="badge bg-danger">
                                                        <i class="fas fa-trash"></i> @item.TipoDeEvento
                                                    </span>
                                                }
                                                else if (item.TipoDeEvento == "Error")
                                                {
                                                    <span class="badge bg-danger">
                                                        <i class="fas fa-exclamation-triangle"></i> @item.TipoDeEvento
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">@item.TipoDeEvento</span>
                                                }
                                            </td>
                                            <td>@item.FechaDeEvento.ToString("dd/MM/yyyy HH:mm:ss")</td>
                                            <td>
                                                @if (item.DescripcionDeEvento.Length > 50)
                                                {
                                                    @item.DescripcionDeEvento.Substring(0, 50)<text>...</text>
                                                }
                                                else
                                                {
                                                    @item.DescripcionDeEvento
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(item.StackTrace))
                                                {
                                                    if (item.StackTrace.Length > 30)
                                                    {
                                                        <span class="text-danger">@item.StackTrace.Substring(0, 30)...</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-danger">@item.StackTrace</span>
                                                    }
                                                }
                                                else
                                                {
                                                    <span class="text-muted">N/A</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(item.DatosAnteriores))
                                                {
                                                    if (item.DatosAnteriores.Length > 30)
                                                    {
                                                        <small>@item.DatosAnteriores.Substring(0, 30)...</small>
                                                    }
                                                    else
                                                    {
                                                        <small>@item.DatosAnteriores</small>
                                                    }
                                                }
                                                else
                                                {
                                                    <span class="text-muted">N/A</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(item.DatosPosteriores))
                                                {
                                                    if (item.DatosPosteriores.Length > 30)
                                                    {
                                                        <small>@item.DatosPosteriores.Substring(0, 30)...</small>
                                                    }
                                                    else
                                                    {
                                                        <small>@item.DatosPosteriores</small>
                                                    }
                                                }
                                                else
                                                {
                                                    <span class="text-muted">N/A</span>
                                                }
                                            </td>
                                            <td>
                                                <a asp-action="Detalles" asp-route-id="@item.IdEvento" class="btn btn-sm btn-info">
                                                    <i class="fas fa-eye"></i> Ver
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info" role="alert">
                            <i class="fas fa-info-circle"></i> No hay eventos registrados en la bit치cora.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Agregar funcionalidad para copiar JSON al portapapeles si es necesario
        function copiarJSON(texto) {
            navigator.clipboard.writeText(texto);
            alert('JSON copiado al portapapeles');
        }
    </script>
}