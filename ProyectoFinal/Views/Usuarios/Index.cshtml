@model IEnumerable<ProyectoFinal.Models.Usuario>

@{
    ViewData["Title"] = "Usuarios";
}

<div class="container py-4">

    <!-- Hero Usuarios -->
    <div class="card border-0 shadow-sm mb-4 bg-dark bg-gradient text-white">
        <div class="card-body px-4 py-4">
            <div class="d-flex flex-column flex-md-row align-items-start align-items-md-center justify-content-between gap-3">

                <div>
                    <h1 class="h2 fw-semibold mb-1">
                        <i class="bi bi-people me-2"></i> Usuarios
                    </h1>
                    <p class="mb-0 text-white-50">
                        Gestión de usuarios registrados, comercio asociado y estado.
                    </p>
                </div>

                <div>
                    <a class="btn btn-light fw-semibold" href="/Usuarios/Crear" role="button">
                        <i class="bi bi-plus-circle me-1"></i>
                        Crear nuevo
                    </a>
                </div>

            </div>
        </div>
    </div>


    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
        </div>
    }

    <div class="card shadow-sm border-0">
        <div class="card-body">

            <!-- Filtros -->
            <div class="row g-3 mb-3">
                <div class="col-12 col-md-6">
                    <label for="busquedaGeneral" class="form-label">Buscar</label>
                    <input type="text"
                           id="busquedaGeneral"
                           class="form-control"
                           placeholder="Nombre, apellidos, identificación o correo">
                </div>

                <div class="col-12 col-md-3">
                    <label for="busquedaComercio" class="form-label">Comercio</label>
                    <input type="text"
                           id="busquedaComercio"
                           class="form-control"
                           placeholder="Nombre del comercio">
                </div>

                <div class="col-6 col-md-2">
                    <label for="filtroEstado" class="form-label">Estado</label>
                    <select id="filtroEstado" class="form-select">
                        <option value="">Todos</option>
                        <option value="Activo">Activo</option>
                        <option value="Inactivo">Inactivo</option>
                    </select>
                </div>

                <div class="col-6 col-md-1 d-flex align-items-end">
                    <button type="button" id="btnLimpiarFiltros" class="btn btn-outline-secondary w-100">
                        <i class="bi bi-eraser me-1"></i>Limpiar
                    </button>
                </div>
            </div>

            <!-- Tabla -->
            <div class="table-responsive">
                <table class="table align-middle table-hover mb-0" id="tablaUsuarios">
                    <thead class="table-light">
                        <tr>
                            <th>Comercio</th>
                            <th>Nombres</th>
                            <th>Primer Apellido</th>
                            <th>Segundo Apellido</th>
                            <th class="text-nowrap">Identificación</th>
                            <th>Correo Electrónico</th>
                            <th class="text-nowrap">Fecha de registro</th>
                            <th class="text-nowrap">Fecha de modificación</th>
                            <th>Estado</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>

                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr data-row="usuario">
                                    <td>@(item.Comercio != null ? item.Comercio.Nombre : "-")</td>
                                    <td class="fw-semibold">@item.Nombres</td>
                                    <td>@item.PrimerApellido</td>
                                    <td>@item.SegundoApellido</td>
                                    <td class="text-muted">@item.Identificacion</td>
                                    <td>
                                        <a class="text-decoration-none" href="mailto:@item.CorreoElectronico">
                                            <i class="bi bi-envelope me-1"></i>@item.CorreoElectronico
                                        </a>
                                    </td>
                                    <td class="text-nowrap">@item.FechaDeRegistro.ToString("g")</td>
                                    <td class="text-nowrap">
                                        @(
                                                                        item.FechaDeModificacion.HasValue
                                                                        ? item.FechaDeModificacion.Value.ToString("g")
                                                                        : "-"
                                                                        )
                            </td>
                            <td>
                                @if (item.Estado)
                                        {
                                            <span class="badge bg-success-subtle text-success border border-success-subtle">Activo</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary-subtle text-secondary border border-secondary-subtle">Inactivo</span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <a href="/Usuarios/Editar/@item.IdUsuario" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-pencil-square me-1"></i>Editar
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr id="filaSinDatos">
                                <td colspan="10" class="text-center py-4 text-muted">
                                    No hay usuarios registrados.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div id="mensajeSinResultados" class="text-center py-3 text-muted d-none">
                No hay resultados que coincidan con los filtros.
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const inputBuscar = document.getElementById('busquedaGeneral');
            const inputComercio = document.getElementById('busquedaComercio');
            const selectEstado = document.getElementById('filtroEstado');
            const btnLimpiar = document.getElementById('btnLimpiarFiltros');

            const tabla = document.getElementById('tablaUsuarios');
            const filas = tabla.querySelectorAll('tbody tr[data-row="usuario"]');
            const mensajeSinResultados = document.getElementById('mensajeSinResultados');
            const filaSinDatos = document.getElementById('filaSinDatos');

            function normalizar(texto) {
                return (texto || "")
                    .toLowerCase()
                    .normalize("NFD")
                    .replace(/[\u0300-\u036f]/g, "");
            }

            function aplicarFiltros() {
                const texto = normalizar(inputBuscar.value.trim());
                const textoComercio = normalizar(inputComercio.value.trim());
                const estadoFiltro = selectEstado.value;

                let hayVisibles = false;

                filas.forEach(fila => {
                    const celdas = fila.children;

                    const comercio = normalizar(celdas[0].innerText);
                    const nombres = normalizar(celdas[1].innerText);
                    const primerApellido = normalizar(celdas[2].innerText);
                    const segundoApellido = normalizar(celdas[3].innerText);
                    const identificacion = normalizar(celdas[4].innerText);
                    const correo = normalizar(celdas[5].innerText);
                    const estadoTexto = (celdas[8].innerText || "").trim(); // "Activo"/"Inactivo" sigue igual

                    let coincideTexto = true;
                    if (texto) {
                        const buscable = nombres + " " + primerApellido + " " + segundoApellido +
                            " " + identificacion + " " + correo;
                        coincideTexto = buscable.includes(texto);
                    }

                    let coincideComercio = true;
                    if (textoComercio) {
                        coincideComercio = comercio.includes(textoComercio);
                    }

                    let coincideEstado = true;
                    if (estadoFiltro) {
                        coincideEstado = (estadoTexto === estadoFiltro);
                    }

                    if (coincideTexto && coincideComercio && coincideEstado) {
                        fila.style.display = "";
                        hayVisibles = true;
                    } else {
                        fila.style.display = "none";
                    }
                });

                if (mensajeSinResultados) {
                    mensajeSinResultados.classList.toggle('d-none', hayVisibles || filas.length === 0);
                }

                if (filaSinDatos && filas.length === 0) {
                    mensajeSinResultados.classList.add('d-none');
                }
            }

            function limpiarFiltros() {
                inputBuscar.value = "";
                inputComercio.value = "";
                selectEstado.value = "";
                aplicarFiltros();
            }

            inputBuscar.addEventListener('input', aplicarFiltros);
            inputComercio.addEventListener('input', aplicarFiltros);
            selectEstado.addEventListener('change', aplicarFiltros);
            btnLimpiar.addEventListener('click', limpiarFiltros);
        });
    </script>
}
