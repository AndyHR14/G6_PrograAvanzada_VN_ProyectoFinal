@model ProyectoFinal.Models.Usuario

@{
    ViewData["Title"] = "Editar Usuario";
}

<h2>Editar Usuario</h2>

@if (ViewBag.ComercioNombre != null)
{
    <div class="mb-2"><strong>Comercio:</strong> @ViewBag.ComercioNombre</div>
}

@if (ViewData.ModelState.ErrorCount > 0)
{
    <div class="alert alert-danger">Por favor corrige los errores en el formulario.</div>
}

<form asp-action="Editar" method="post">
    <input asp-for="IdUsuario" type="hidden" />
    <input asp-for="IdNetUser" type="hidden" />
    <input asp-for="FechaDeRegistro" type="hidden" />
    <input asp-for="Estado" type="hidden" />

    <div class="form-group">
        <label asp-for="IdComercio">Id Comercio</label>
        <input asp-for="IdComercio" type="number" class="form-control" />
        <span asp-validation-for="IdComercio" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Nombres"></label>
        <input asp-for="Nombres" class="form-control" />
        <span asp-validation-for="Nombres" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PrimerApellido"></label>
        <input asp-for="PrimerApellido" class="form-control" />
        <span asp-validation-for="PrimerApellido" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SegundoApellido"></label>
        <input asp-for="SegundoApellido" class="form-control" />
        <span asp-validation-for="SegundoApellido" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Identificacion"></label>
        <input asp-for="Identificacion" class="form-control" />
        <span asp-validation-for="Identificacion" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CorreoElectronico"></label>
        <input asp-for="CorreoElectronico" class="form-control" />
        <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a class="btn btn-secondary" href="/Usuarios">Volver</a>
</form>
