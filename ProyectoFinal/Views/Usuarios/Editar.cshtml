@model ProyectoFinal.Models.Usuario

@{
    ViewData["Title"] = "Editar Usuario";
}

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8 col-xl-6">
            <div class="card shadow-sm">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h1 class="h5 mb-0">Editar Usuario</h1>

                    @* Info del comercio, si aplica *@
                    @if (ViewBag.ComercioNombre != null)
                    {
                        <span class="badge bg-primary">
                            Comercio: @ViewBag.ComercioNombre
                        </span>
                    }
                </div>

                <div class="card-body">
                    @* Resumen de errores del modelo *@
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3" role="alert"></div>

                    <form asp-action="Editar" method="post" class="needs-validation" novalidate>
                        @* Campos ocultos *@
                        <input asp-for="IdUsuario" type="hidden" />
                        <input asp-for="IdNetUser" type="hidden" />
                        <input asp-for="FechaDeRegistro" type="hidden" />
                        <input asp-for="Estado" type="hidden" />

                        <div class="row">
                            <div class="col-12 col-md-4 mb-3">
                                <label asp-for="IdComercio" class="form-label">Id Comercio</label>
                                <input asp-for="IdComercio" type="number" class="form-control" />
                                <span asp-validation-for="IdComercio" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12 col-md-6 mb-3">
                                <label asp-for="Nombres" class="form-label"></label>
                                <input asp-for="Nombres" class="form-control" />
                                <span asp-validation-for="Nombres" class="text-danger small"></span>
                            </div>
                            <div class="col-12 col-md-6 mb-3">
                                <label asp-for="Identificacion" class="form-label"></label>
                                <input asp-for="Identificacion" class="form-control" />
                                <span asp-validation-for="Identificacion" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12 col-md-4 mb-3">
                                <label asp-for="PrimerApellido" class="form-label"></label>
                                <input asp-for="PrimerApellido" class="form-control" />
                                <span asp-validation-for="PrimerApellido" class="text-danger small"></span>
                            </div>
                            <div class="col-12 col-md-4 mb-3">
                                <label asp-for="SegundoApellido" class="form-label"></label>
                                <input asp-for="SegundoApellido" class="form-control" />
                                <span asp-validation-for="SegundoApellido" class="text-danger small"></span>
                            </div>
                            <div class="col-12 col-md-4 mb-3">
                                <label asp-for="CorreoElectronico" class="form-label"></label>
                                <input asp-for="CorreoElectronico" class="form-control" />
                                <span asp-validation-for="CorreoElectronico" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-3">
                            <a class="btn btn-outline-secondary" href="/Usuarios">Volver</a>
                            <button type="submit" class="btn btn-primary">
                                Guardar cambios
                            </button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

