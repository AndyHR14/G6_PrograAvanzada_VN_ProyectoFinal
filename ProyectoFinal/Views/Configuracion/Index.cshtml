@model IEnumerable<ProyectoFinal.Models.Configuracion>

@{
    ViewData["Title"] = "Configuraciones de Comercio";
}

<div class="container py-4">

    <div class="d-flex align-items-start justify-content-between flex-wrap gap-2 mb-3">
        <div>
            <h1 class="h3 mb-1">Configuraciones de Comercio</h1>
            <p class="text-muted mb-0">Gestión de configuraciones y comisiones por comercio.</p>
        </div>
        <div class="d-flex gap-2">
            <a class="btn btn-primary" asp-action="Registrar" role="button">
                <i class="bi bi-plus-circle me-1"></i> Nueva Configuración
            </a>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table align-middle table-hover">
                    <thead class="table-light">
                        <tr>
                            <th scope="col">Nombre del Comercio</th>
                            <th scope="col" class="text-nowrap">Tipo de Configuración</th>
                            <th scope="col">Comisión</th>
                            <th scope="col" class="text-nowrap">Fecha de Registro</th>
                            <th scope="col" class="text-nowrap">Fecha de Modificación</th>
                            <th scope="col">Estado</th>
                            <th scope="col" class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="fw-semibold">@item.Comercio.Nombre</td>
                                    <td>
                                        @if (item.TipoConfiguracion == 1)
                                        {
                                            <span class="badge bg-primary-subtle text-primary border border-primary-subtle">Plataforma</span>
                                        }
                                        else if (item.TipoConfiguracion == 2)
                                        {
                                            <span class="badge bg-info-subtle text-info border border-info-subtle">Externa</span>
                                        }
                                        else if (item.TipoConfiguracion == 3)
                                        {
                                            <span class="badge bg-success-subtle text-success border border-success-subtle">Ambas</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-light text-dark border">
                                            @item.Comision%
                                        </span>
                                    </td>
                                    <td>@item.FechaDeRegistro.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        @if (item.FechaDeModificacion.HasValue)
                                        {
                                            @item.FechaDeModificacion.Value.ToString("dd/MM/yyyy")
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.Estado)
                                        {
                                            <span class="badge bg-success-subtle text-success border border-success-subtle">Activo</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary-subtle text-secondary border border-secondary-subtle">Inactivo</span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group" role="group">
                                            <a class="btn btn-sm btn-outline-primary"
                                               asp-action="Editar" asp-route-id="@item.IdConfiguracion">
                                                <i class="bi bi-pencil-square me-1"></i>Editar
                                            </a>
                                            <a class="btn btn-sm btn-outline-info"
                                               asp-action="VerDetalles" asp-route-id="@item.IdConfiguracion">
                                                <i class="bi bi-eye me-1"></i>Ver
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center py-4 text-muted">
                                    <i class="bi bi-info-circle me-2"></i>No hay configuraciones registradas.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>