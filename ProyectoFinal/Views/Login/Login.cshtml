@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<link rel="stylesheet" href="~/css/Login.css" />

<div class="login-container">

    <div class="login-left">
        <div class="brand">
            <span class="logo-circle"></span>
            <h3>Banco Los Patitos </h3>
        </div>

        <form id="formLogin" class="login-form">

            <label class="form-label">Correo</label>
            <input type="email"
                   id="correo"
                   name="correo"
                   class="form-input"
                   placeholder="Ingrese su correo"
                   required />

            <label class="form-label">Contraseña</label>
            <input type="password"
                   id="password"
                   name="password"
                   class="form-input"
                   placeholder="Ingrese su contraseña"
                   required />

            <button type="submit" class="btn-login">Ingresar</button>

            <button type="button"
                    class="btn-login"
                    onclick="window.location.href='@Url.Action("Registrar", "Login")'">
                Registrarse
            </button>

            <p id="mensajeError" class="error-msg">Correo o contraseña incorrectos.</p>

        </form>
    </div>

    <div class="login-right">
        <div class="image-overlay"></div>
        <img src="https://images.unsplash.com/photo-1680518000993-3129f726f3a1?w=600&auto=format&fit=crop&q=60&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTl8fHJ1YmJlciUyMGR1Y2t8ZW58MHx8MHx8fDI%3D"
             class="hero-image" />
    </div>

</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        $(function () {

            $('#mensajeError').hide();

            $('#formLogin').on('submit', function (e) {
                e.preventDefault();

                $.ajax({
                    url: '@Url.Action("ValidarLogin", "Login")',
                    type: 'POST',
                    data: {
                        correo: $('#correo').val(),
                        password: $('#password').val()
                    },
                    success: function (response) {
                        if (response === true) {
                            window.location.href = '@Url.Action("Index", "Home")';
                        } else {
                            $('#mensajeError').fadeIn();
                        }
                    }
                });
            });
        });
    </script>
}
