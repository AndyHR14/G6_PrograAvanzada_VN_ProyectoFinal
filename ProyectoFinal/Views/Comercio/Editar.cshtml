@model ProyectoFinal.Models.Comercio

<h2>Editar comercio</h2>

<form asp-action="Editar" method="post">
    <input type="hidden" asp-for="IdComercio" />

    <div class="mb-3">
        <label for="" class="form-label">ID Comercio</label>
        <input type="text" readonly
               class="form-control"
               asp-for="IdComercio"
               aria-describedby="helpId"
               placeholder="Id" />
    </div>

    <div class="mb-3">
        <label asp-for="Identificacion" class="form-label">Identificación</label>
        <input asp-for="Identificacion" readonly
               class="form-control"  
               aria-describedby="helpIdentificacion" 
               placeholder="Ingrese la identificación" />
        <small id="helpIdentificacion" class="form-text text-muted"></small>
    </div>

    <div class="mb-3">
        <label asp-for="TipoIdentificacion" class="form-label">Tipo de Identificación</label>
        <select asp-for="TipoIdentificacion" readonly class="form-select" aria-describedby="helpTipoIdentificacion">
            <option value="">Seleccione...</option>
            <option value="1">Física</option>
            <option value="2">Jurídica</option>
        </select>
        <small id="helpTipoIdentificacion" class="form-text text-muted"></small>
    </div>

    <div class="col-md-6">
        <div class="mb-3">
            <label asp-for="Nombre" class="form-label">Nombre</label>
            <input asp-for="Nombre" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="TipoDeComercio" class="form-label">Tipo de Comercio</label>
            <select asp-for="TipoDeComercio" class="form-select">
                <option value="">Seleccione...</option>
                <option value="1">Restaurantes</option>
                <option value="2">Supermercados</option>
                <option value="3">Ferreterías</option>
                <option value="4">Otros</option>
            </select>
        </div>

        <div class="mb-3">
            <label asp-for="Telefono" class="form-label">Teléfono</label>
            <input asp-for="Telefono" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="CorreoElectronico" class="form-label">Correo Electrónico</label>
            <input asp-for="CorreoElectronico" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Direccion" class="form-label">Dirección</label>
            <textarea asp-for="Direccion" class="form-control"></textarea>
        </div>

        <div class="mb-3">
            <label asp-for="Estado" class="form-label">Estado</label>
            <select asp-for="Estado" class="form-select">
                <option value="True">Activo</option>
                <option value="False">Inactivo</option>
            </select>
        </div>
    </div>   

    <hr />
    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    <a asp-action="Index" class="btn btn-warning">Volver</a>
</form>