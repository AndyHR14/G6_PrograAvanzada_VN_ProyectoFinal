@model ProyectoFinal.Models.Comercio

@{
    ViewData["Title"] = "Editar comercio";
}

<div class="container py-4">

    <div class="d-flex align-items-start justify-content-between flex-wrap gap-2 mb-3">
        <div>
            <h1 class="h3 mb-1">Editar comercio</h1>
            <p class="text-muted mb-0">Actualiza la información del comercio.</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Volver
            </a>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-12 col-lg-9">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <form asp-action="Editar" method="post" novalidate>
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="IdComercio" />

                        <div class="row g-3">
                            <div class="col-12 col-md-4">
                                <label class="form-label">ID Comercio</label>
                                <input asp-for="IdComercio" class="form-control" readonly />
                            </div>

                            <div class="col-12 col-md-4">
                                <div class="form-floating">
                                    <input asp-for="Identificacion" class="form-control" placeholder="Identificación" readonly />
                                    <label asp-for="Identificacion">Identificación</label>
                                </div>
                            </div>

                            <div class="col-12 col-md-4">
                                <label asp-for="TipoIdentificacion" class="form-label">Tipo de Identificación</label>
                                <select asp-for="TipoIdentificacion" class="form-select" disabled>
                                    <option value="1">Física</option>
                                    <option value="2">Jurídica</option>
                                </select>
                                <input type="hidden" asp-for="TipoIdentificacion" />
                            </div>

                            <div class="col-12 col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Nombre" class="form-control" placeholder="Nombre" />
                                    <label asp-for="Nombre">Nombre</label>
                                </div>
                                <span asp-validation-for="Nombre" class="text-danger small"></span>
                            </div>

                            <div class="col-12 col-md-6">
                                <label asp-for="TipoDeComercio" class="form-label">Tipo de Comercio</label>
                                <select asp-for="TipoDeComercio" class="form-select">
                                    <option value="">Seleccione…</option>
                                    <option value="1">Restaurantes</option>
                                    <option value="2">Supermercados</option>
                                    <option value="3">Ferreterías</option>
                                    <option value="4">Otros</option>
                                </select>
                                <span asp-validation-for="TipoDeComercio" class="text-danger small"></span>
                            </div>

                            <div class="col-12 col-md-6">
                                <label asp-for="Telefono" class="form-label">Teléfono</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-telephone"></i></span>
                                    <input asp-for="Telefono" class="form-control" type="tel" inputmode="numeric" maxlength="8" placeholder="8 dígitos" />
                                </div>
                                <span asp-validation-for="Telefono" class="text-danger small"></span>
                            </div>

                            <div class="col-12 col-md-6">
                                <label asp-for="CorreoElectronico" class="form-label">Correo Electrónico</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                    <input asp-for="CorreoElectronico" class="form-control" type="email" />
                                </div>
                                <span asp-validation-for="CorreoElectronico" class="text-danger small"></span>
                            </div>

                            <div class="col-12">
                                <div class="form-floating">
                                    <textarea asp-for="Direccion" class="form-control" placeholder="Dirección" style="height:100px"></textarea>
                                    <label asp-for="Direccion">Dirección</label>
                                </div>
                                <span asp-validation-for="Direccion" class="text-danger small"></span>
                            </div>

                            <div class="col-12 col-md-4">
                                <label asp-for="Estado" class="form-label">Estado</label>
                                <select asp-for="Estado" class="form-select">
                                    <option value="True">Activo</option>
                                    <option value="False">Inactivo</option>
                                </select>
                                <span asp-validation-for="Estado" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="d-flex gap-2 justify-content-end mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save2 me-1"></i> Guardar cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="alert alert-light border mt-3 mb-0">
                <i class="bi bi-shield-check me-2"></i>
                Recuerda: identificación y tipo de identificación están bloqueados para mantener integridad.
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
