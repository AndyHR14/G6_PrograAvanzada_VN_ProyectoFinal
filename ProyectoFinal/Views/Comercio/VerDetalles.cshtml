@model ProyectoFinal.Models.Comercio

@{
    ViewData["Title"] = "Detalles del Comercio";
    var tipoId = Model.TipoIdentificacion == 1 ? "Física"
                : Model.TipoIdentificacion == 2 ? "Jurídica" : "Desconocido";

    var tipoComercio = Model.TipoDeComercio switch
    {
        1 => "Restaurantes",
        2 => "Supermercados",
        3 => "Ferreterías",
        4 => "Otros",
        _ => "No especificado"
    };
}


    <div class="d-flex align-items-start justify-content-between flex-wrap gap-2 mb-3">
        <div>
            <h1 class="h3 mb-1">Detalles del comercio</h1>
            <p class="text-muted mb-0">Información completa del registro seleccionado.</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Editar" asp-route-id="@Model.IdComercio" class="btn btn-primary">
                <i class="bi bi-pencil-square me-1"></i> Editar
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Volver
            </a>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-4">
            <div class="row g-3">
                <div class="col-12 col-md-6">
                    <div class="mb-2"><span class="text-muted">Identificación</span></div>
                    <div class="fw-semibold">@Model.Identificacion</div>
                </div>

                <div class="col-12 col-md-6">
                    <div class="mb-2"><span class="text-muted">Tipo de identificación</span></div>
                    <div>@tipoId</div>
                </div>

                <div class="col-12 col-md-6">
                    <div class="mb-2"><span class="text-muted">Nombre</span></div>
                    <div class="fw-semibold">@Model.Nombre</div>
                </div>

                <div class="col-12 col-md-6">
                    <div class="mb-2"><span class="text-muted">Tipo de comercio</span></div>
                    <div>@tipoComercio</div>
                </div>

                <div class="col-12 col-md-6">
                    <div class="mb-2"><span class="text-muted">Teléfono</span></div>
                    <div>
                        <span class="badge bg-light text-dark border">
                            <i class="bi bi-telephone me-1"></i>@Model.Telefono
                        </span>
                    </div>
                </div>

                <div class="col-12 col-md-6">
                    <div class="mb-2"><span class="text-muted">Correo electrónico</span></div>
                    <div>
                        <a href="mailto:@Model.CorreoElectronico" class="text-decoration-none">
                            <i class="bi bi-envelope me-1"></i>@Model.CorreoElectronico
                        </a>
                    </div>
                </div>

                <div class="col-12">
                    <div class="mb-2"><span class="text-muted">Dirección</span></div>
                    <div>@Model.Direccion</div>
                </div>

                <div class="col-12 col-md-6">
                    <div class="mb-2"><span class="text-muted">Fecha de registro</span></div>
                    <div>@Model.FechaDeRegistro.ToString("dd/MM/yyyy")</div>
                </div>

                <div class="col-12 col-md-6">
                    <div class="mb-2"><span class="text-muted">Fecha de modificación</span></div>
                    <div>@(Model.FechaDeModificacion.HasValue? Model.FechaDeModificacion.Value.ToString("dd/MM/yyyy") : "N/A")</div>
                </div>

                <div class="col-12">
                    <div class="mb-2"><span class="text-muted">Estado</span></div>
                    <div>
                        @if (Model.Estado)
                        {
                            <span class="badge bg-success-subtle text-success border border-success-subtle">Activo</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary-subtle text-secondary border border-secondary-subtle">Inactivo</span>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
