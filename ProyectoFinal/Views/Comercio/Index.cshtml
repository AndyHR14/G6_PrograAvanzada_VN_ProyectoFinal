@model IEnumerable<ProyectoFinal.Models.Comercio>

@{
    ViewData["Title"] = "Comercios";
}

<div class="container py-4">

    <div class="d-flex align-items-start justify-content-between flex-wrap gap-2 mb-3">
        <div>
            <h1 class="h3 mb-1">Comercios</h1>
            <p class="text-muted mb-0">Directorio de comercios registrados y su estado.</p>
        </div>
        <div class="d-flex gap-2">
            <a class="btn btn-primary" asp-action="Crear" role="button">
                <i class="bi bi-plus-circle me-1"></i> Crear
            </a>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table align-middle table-hover">
                    <thead class="table-light">
                        <tr>
                            <th class="text-nowrap">Identificación</th>
                            <th class="text-nowrap">Tipo identificación</th>
                            <th>Nombre</th>
                            <th class="text-nowrap">Tipo de comercio</th>
                            <th>Teléfono</th>
                            <th>Correo electrónico</th>
                            <th>Estado</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var itemDato in Model)
                            {
                                var tipoId = itemDato.TipoIdentificacion == 1 ? "Física"
                                : itemDato.TipoIdentificacion == 2 ? "Jurídica" : "N/D";

                                var tipoComercio = itemDato.TipoDeComercio switch
                                {
                                    1 => "Restaurantes",
                                    2 => "Supermercados",
                                    3 => "Ferreterías",
                                    4 => "Otros",
                                    _ => "No especificado"
                                };

                                <tr>
                                    <td class="text-muted">@itemDato.Identificacion</td>
                                    <td>@tipoId</td>
                                    <td class="fw-semibold">@itemDato.Nombre</td>
                                    <td>@tipoComercio</td>
                                    <td>
                                        <span class="badge bg-light text-dark border">
                                            <i class="bi bi-telephone me-1"></i>@itemDato.Telefono
                                        </span>
                                    </td>
                                    <td>
                                        <a href="mailto:@itemDato.CorreoElectronico" class="text-decoration-none">
                                            <i class="bi bi-envelope me-1"></i>@itemDato.CorreoElectronico
                                        </a>
                                    </td>
                                    <td>
                                        @if (itemDato.Estado)
                                        {
                                            <span class="badge bg-success-subtle text-success border border-success-subtle">Activo</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary-subtle text-secondary border border-secondary-subtle">Inactivo</span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group" role="group">
                                            <a class="btn btn-sm btn-outline-primary"
                                               asp-controller="Comercio" asp-action="Editar" asp-route-id="@itemDato.IdComercio">
                                                <i class="bi bi-pencil-square me-1"></i>Editar
                                            </a>
                                            <a class="btn btn-sm btn-outline-success"
                                               asp-controller="Comercio" asp-action="VerDetalles" asp-route-id="@itemDato.IdComercio">
                                                <i class="bi bi-card-text me-1"></i>Detalles
                                            </a>
                                            <a class="btn btn-sm btn-outline-info"
                                               asp-controller="Cajas" asp-action="Index" asp-route-id="@itemDato.IdComercio">
                                                <i class="bi bi-box-seam me-1"></i>Ver cajas
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center py-4 text-muted">No hay comercios registrados.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
