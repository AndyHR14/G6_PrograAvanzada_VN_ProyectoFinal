@model IEnumerable<ProyectoFinal.Models.Comercio>

@{
    ViewData["Title"] = "Comercios";
}

<div class="container py-4">

    <!-- Hero Comercios -->
    <div class="card border-0 shadow-sm mb-4 bg-primary bg-gradient text-white">
        <div class="card-body px-4 py-4">
            <div class="d-flex flex-column flex-md-row align-items-start align-items-md-center justify-content-between gap-3">

                <div>
                    <h1 class="h2 fw-semibold mb-1">
                        <i class="bi bi-building me-2"></i> Comercios
                    </h1>
                    <p class="mb-0 text-white-50">
                        Directorio de comercios registrados y su estado.
                    </p>
                </div>

                <div>
                    <a class="btn btn-light fw-semibold"
                       asp-action="Crear">
                        <i class="bi bi-plus-circle me-1"></i>
                        Crear comercio
                    </a>
                </div>

            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">

            <!-- Filtros -->
            <div class="row g-3 mb-3">
                <div class="col-12 col-md-4">
                    <label for="filtroTexto" class="form-label">Buscar</label>
                    <input type="text"
                           id="filtroTexto"
                           class="form-control"
                           placeholder="Identificación, nombre, teléfono o correo">
                </div>

                <div class="col-6 col-md-3">
                    <label for="filtroTipoId" class="form-label">Tipo identificación</label>
                    <select id="filtroTipoId" class="form-select">
                        <option value="">Todos</option>
                        <option value="Física">Física</option>
                        <option value="Jurídica">Jurídica</option>
                        <option value="N/D">N/D</option>
                    </select>
                </div>

                <div class="col-6 col-md-3">
                    <label for="filtroTipoComercio" class="form-label">Tipo de comercio</label>
                    <select id="filtroTipoComercio" class="form-select">
                        <option value="">Todos</option>
                        <option value="Restaurantes">Restaurantes</option>
                        <option value="Supermercados">Supermercados</option>
                        <option value="Ferreterías">Ferreterías</option>
                        <option value="Otros">Otros</option>
                        <option value="No especificado">No especificado</option>
                    </select>
                </div>

                <div class="col-6 col-md-2">
                    <label for="filtroEstado" class="form-label">Estado</label>
                    <select id="filtroEstado" class="form-select">
                        <option value="">Todos</option>
                        <option value="Activo">Activo</option>
                        <option value="Inactivo">Inactivo</option>
                    </select>
                </div>

                <div class="col-6 col-md-2 d-flex align-items-end">
                    <button type="button" id="btnLimpiarFiltros" class="btn btn-outline-secondary w-100">
                        <i class="bi bi-eraser me-1"></i> Limpiar
                    </button>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table align-middle table-hover mb-0" id="tablaComercios">
                    <thead class="table-light">
                        <tr>
                            <th class="text-nowrap">Identificación</th>
                            <th class="text-nowrap">Tipo identificación</th>
                            <th>Nombre</th>
                            <th class="text-nowrap">Tipo de comercio</th>
                            <th>Teléfono</th>
                            <th>Correo electrónico</th>
                            <th>Estado</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var itemDato in Model)
                            {
                                var tipoId = itemDato.TipoIdentificacion == 1 ? "Física"
                                : itemDato.TipoIdentificacion == 2 ? "Jurídica" : "N/D";

                                var tipoComercio = itemDato.TipoDeComercio switch
                                {
                                    1 => "Restaurantes",
                                    2 => "Supermercados",
                                    3 => "Ferreterías",
                                    4 => "Otros",
                                    _ => "No especificado"
                                };

                                <tr data-row="comercio">
                                    <td class="text-muted">@itemDato.Identificacion</td>
                                    <td>@tipoId</td>
                                    <td class="fw-semibold">@itemDato.Nombre</td>
                                    <td>@tipoComercio</td>
                                    <td>
                                        <span class="badge bg-light text-dark border">
                                            <i class="bi bi-telephone me-1"></i>@itemDato.Telefono
                                        </span>
                                    </td>
                                    <td>
                                        <a href="mailto:@itemDato.CorreoElectronico" class="text-decoration-none">
                                            <i class="bi bi-envelope me-1"></i>@itemDato.CorreoElectronico
                                        </a>
                                    </td>
                                    <td>
                                        @if (itemDato.Estado)
                                        {
                                            <span class="badge bg-success-subtle text-success border border-success-subtle">Activo</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary-subtle text-secondary border border-secondary-subtle">Inactivo</span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group" role="group" aria-label="Acciones de comercio">
                                            <a class="btn btn-sm btn-outline-primary"
                                               asp-controller="Comercio" asp-action="Editar" asp-route-id="@itemDato.IdComercio">
                                                <i class="bi bi-pencil-square me-1"></i>Editar
                                            </a>
                                            <a class="btn btn-sm btn-outline-success"
                                               asp-controller="Comercio" asp-action="VerDetalles" asp-route-id="@itemDato.IdComercio">
                                                <i class="bi bi-card-text me-1"></i>Detalles
                                            </a>
                                            <a class="btn btn-sm btn-outline-info"
                                               asp-controller="Cajas" asp-action="Index" asp-route-id="@itemDato.IdComercio">
                                                <i class="bi bi-box-seam me-1"></i>Ver cajas
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr id="filaSinDatos">
                                <td colspan="8" class="text-center py-4 text-muted">No hay comercios registrados.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div id="mensajeSinResultados" class="text-center py-3 text-muted d-none">
                No hay resultados que coincidan con los filtros.
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const inputTexto = document.getElementById('filtroTexto');
            const selectTipoId = document.getElementById('filtroTipoId');
            const selectTipoComercio = document.getElementById('filtroTipoComercio');
            const selectEstado = document.getElementById('filtroEstado');
            const btnLimpiar = document.getElementById('btnLimpiarFiltros');

            const tabla = document.getElementById('tablaComercios');
            const filas = tabla.querySelectorAll('tbody tr[data-row="comercio"]');
            const mensajeSinResultados = document.getElementById('mensajeSinResultados');
            const filaSinDatos = document.getElementById('filaSinDatos');

            function normalizar(texto) {
                return (texto || "")
                    .toLowerCase()
                    .normalize("NFD")
                    .replace(/[\u0300-\u036f]/g, "");
            }

            function aplicarFiltros() {
                const texto = normalizar(inputTexto.value.trim());
                const tipoIdFiltro = selectTipoId.value;
                const tipoComercioFiltro = selectTipoComercio.value;
                const estadoFiltro = selectEstado.value;

                let hayVisibles = false;

                filas.forEach(fila => {
                    const celdas = fila.children;

                    const identificacion = normalizar(celdas[0].innerText);
                    const tipoIdTexto = (celdas[1].innerText || "").trim();
                    const nombre = normalizar(celdas[2].innerText);
                    const tipoComercioTexto = (celdas[3].innerText || "").trim();
                    const telefono = normalizar(celdas[4].innerText);
                    const correo = normalizar(celdas[5].innerText);
                    const estadoTexto = (celdas[6].innerText || "").trim();

                    const textoBuscable = identificacion + " " + nombre + " " + telefono + " " + correo;

                    let coincideTexto = true;
                    if (texto) coincideTexto = textoBuscable.includes(texto);

                    let coincideTipoId = true;
                    if (tipoIdFiltro) coincideTipoId = (tipoIdTexto === tipoIdFiltro);

                    let coincideTipoComercio = true;
                    if (tipoComercioFiltro) coincideTipoComercio = (tipoComercioTexto === tipoComercioFiltro);

                    let coincideEstado = true;
                    if (estadoFiltro) coincideEstado = (estadoTexto === estadoFiltro);

                    if (coincideTexto && coincideTipoId && coincideTipoComercio && coincideEstado) {
                        fila.style.display = "";
                        hayVisibles = true;
                    } else {
                        fila.style.display = "none";
                    }
                });

                if (mensajeSinResultados) {
                    mensajeSinResultados.classList.toggle('d-none', hayVisibles || filas.length === 0);
                }

                if (filaSinDatos && filas.length === 0) {
                    mensajeSinResultados.classList.add('d-none');
                }
            }

            function limpiarFiltros() {
                inputTexto.value = "";
                selectTipoId.value = "";
                selectTipoComercio.value = "";
                selectEstado.value = "";
                aplicarFiltros();
            }

            inputTexto.addEventListener('input', aplicarFiltros);
            selectTipoId.addEventListener('change', aplicarFiltros);
            selectTipoComercio.addEventListener('change', aplicarFiltros);
            selectEstado.addEventListener('change', aplicarFiltros);
            btnLimpiar.addEventListener('click', limpiarFiltros);
        });
    </script>
}
